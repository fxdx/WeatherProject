#:kivy 1.11.0

<MyGrid>:

    city_text_input: city_text_input
    weather_output: weather_output

    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2

            Label:
                text: "City: "

            TextInput:
                id: city_text_input
                multinline: False

            Button:
                text: "Show Actual Weather"
                on_press: root.actual_weather_button_press()

            Button:
                text: "Show Forecast Data"
                on_press: root.weather_forecast_button_press()

        GridLayout:
            cols: 1

            Label:
                id: weather_output
                text: " "