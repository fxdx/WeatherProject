#:kivy 1.11.0

<MyGrid>:

    city_text_input: city_text_input
    actual_weather_output: actual_weather_output

    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2

            Label:
                text: "City: "

            TextInput:
                id: city_text_input
                multinline: False

            Button:
                text: "Show Actual Weather"
                on_press: root.actual_weather_button(city_text_input.text)

            Button:
                text: "Show Forecast Data"

        GridLayout:
            cols: 1

            TextInput:
                id: actual_weather_output
                text: " "

                